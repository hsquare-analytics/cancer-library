<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20221018101301-1" author="jhipster">
        <createTable tableName="ph_item_lookup">
            <column name="item_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="order_no" type="int"/>
        </createTable>
        <addPrimaryKey columnNames="item_id, title" tableName="ph_item_lookup"/>

        <addForeignKeyConstraint baseColumnNames="item_id"
            baseTableName="ph_item_lookup"
            constraintName="fk_item_lookup_item_id"
            referencedColumnNames="id"
            referencedTableName="ph_item"/>
    </changeSet>

    <changeSet id="20221018101301-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/item_lookup.csv"
                  separator=";"
                  tableName="ph_item_lookup"
                  usePreparedStatements="true">
            <column name="item_id" type="numeric"/>
            <column name="title" type="string"/>
            <column name="descripton" type="string"/>
            <column name="order_no" type="numeric"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
